<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">

        <a class="text-blue-500 text-xl" href="/">Home page</a>

        <h1 class="text-white text-2xl tracking-tighter mb-3 mt-10">All Users</h1>

        <div class="users flex gap-3 flex-wrap">

            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                        <img class="w-ful h-full object-cover object-top" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-400"><%= user.email %></h5>
                    <div class="flex gap-3 mt-10 justify-between">
                        <a class="text-zinc-200" href="/edit/<%= user.id %>">Edit User</a>
                        <a class="text-red-200" href="/delete/<%= user.id %>">Delete User</a>
                    </div>
                </div>
    
            <% }) %>
      
      
        </div>

    </div>

    <!-- <script src="./stylesheets/index.js"></script> -->

</body>

</html>